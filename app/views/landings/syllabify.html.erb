        <!-- sidebar -->
        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
        	<div class="text-center" style="padding-top: 0px;">
        		<font style="font-size: 35px;">Languages</font>
	            <div class="list-group">

                  <%for language in Language.all %>
                      <%if (current_page?("/syllabify/#{language.value}") )  %>
                            <a href="/syllabify/<%= language.value %>" class="list-group-item active"> <%= language.value %> </a>
                      <%else%>
                            <a href="/syllabify/<%= language.value %>" class="list-group-item"> <%= language.value %> </a>
                      <%end%>
                  <%end%>

                  <span style="visibility:hidden" id="language_name">
                    <%= @language.value%>
                  </span>

	            </div>
          	</div>
        </div>
  	
        <!-- main area -->
        <div class="col-xs-12 col-sm-9">
          <div class="jumbotron">
            <button type="button" class="btn btn-default" aria-label="Left Align" id="session-pin">
                <span class="glyphicon glyphicon-pushpin" aria-hidden="true"><%= number_of_skipped_words %> 
                </span>    
            </button>
            <%= link_to( content_tag(:span , "" , :class => "glyphicon glyphicon-refresh" ) ,  clear_skipped_words_path , :class => "btn btn-info" , :method => :post , :remote => true) %>
              <div class="container text-center">
                <div id="word_card">
                    <%= render :partial => "shared/word_card" , :locals => {:completed => @completed , :total => @total , :word => @word } %>
                </div>
              </div>
          </div>
        </div>